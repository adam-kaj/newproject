<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


    <bean id="driverProvider" class="Steps.configuration.PropertyWebDriverProvider"/>

    <!-- beany fabryk stron -->
    <bean id="PageFactory" class="PageFactory.PageFactory">
        <constructor-arg ref="driverProvider"/>
    </bean>

    <!-- kroki wprowadzajace dane -->
    <bean id="google" class="Steps.GoogleStep">
        <constructor-arg ref="PageFactory"/>
    </bean>
    <bean id="button" class="Steps.ButtonStep">
        <constructor-arg ref="PageFactory"/>
    </bean>
   </beans>